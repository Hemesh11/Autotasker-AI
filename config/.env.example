# Environment Variables for AutoTasker AI

# LLM API Configuration (Choose one)
# Option 1: OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Option 2: OpenRouter API (Recommended - supports multiple models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# GitHub API (Optional - for repository data)
# GitHub Integration (add this section)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_DEFAULT_OWNER=your-username
GITHUB_DEFAULT_REPO=your-repo-name
# AWS Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=autotasker-logs
AWS_SES_EMAIL=your-email@domain.com

# Google OAuth (paths to credential files)
GOOGLE_CREDENTIALS_PATH=google_auth/credentials.json
GOOGLE_TOKEN_PATH=google_auth/token.json

# GitHub Integration (optional)
GITHUB_TOKEN=your_github_personal_access_token_here

# Gmail Configuration
GMAIL_ADDRESS=your.email@gmail.com

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Scheduler Settings
SCHEDULE_TIME=09:00
TIMEZONE=UTC

# Memory Settings
MEMORY_RETENTION_DAYS=30
USE_VECTOR_STORE=False
